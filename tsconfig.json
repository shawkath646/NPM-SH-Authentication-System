{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": false, // Change to false if you want TypeScript to check .js files
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "src/**/*.css"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}